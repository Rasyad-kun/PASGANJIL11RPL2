<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="219dp"
    android:layout_marginHorizontal="25dp"
    android:layout_marginVertical="10dp"
    app:cardBackgroundColor="#575757"
    app:cardElevation="10dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_urlToImage_rowNews"
                android:layout_width="match_parent"
                android:layout_height="144dp"
                android:src="#ff00" />

            <View
                android:layout_width="match_parent"
                android:layout_height="144dp"
                android:background="@drawable/bg_img_row_news_item" />

            <TextView
                android:id="@+id/tv_title_rowNews"
                style="@style/TitleNews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginHorizontal="12dp"
                android:layout_marginBottom="7dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="News About Natural Scary Disasters &amp; Accidents In..."
                android:textAllCaps="true"
                android:textStyle="bold" />

        </FrameLayout>

        <TextView
            android:id="@+id/tv_publishedAt_rowNews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Published By: NDA"
            android:textColor="#ffff" />

        <TextView
            android:id="@+id/tv_description_rowNews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Est ante in nibh mauris cursus mattis molestie a iaculis at erat pellentesque adipiscing "
            android:textColor="#ffff" />

    </LinearLayout>

</androidx.cardview.widget.CardView>